.all {
  padding: 20px;
  height: 80%;
}

.head {
  height: 60px;
  text-align: center;
  border: 1px black solid;
  background-color:paleturquoise;
}

.left {
  width: 25%;
  height: 100%;
  float: left;
}

.right {
  width: 60%;
  height: 100%;
  float: left;
  text-align: center;
  color:black;

 }

.body {
  background:lightcyan;
  margin-top: 20px;
  padding: 0px;
  padding-top: 20px;
  width: 100%;
  height: auto;
  text-align: center;
}

.content {
  padding: 20px;
  height: 100%;
  width: 80%;
  margin: 0 auto;
}

text {
  font-size: 1.2rem;
  line-height: 100px;
  text-align:center;
}

